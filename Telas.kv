            pos_hint:{'center_y': .53}
        MDLabel:
            padding: '53dp', '53dp'
            text: 'Cargo:'
            pos_hint:{'center_y': .43}
        MDLabel:
            padding: '53dp', '53dp'
            text: 'Salário:'
            pos_hint:{'center_y': .33}

        MDRaisedButton:
            md_bg_color: '#a5d4e8'
            text_color: 'black'
            text: 'Emitir Folha'
